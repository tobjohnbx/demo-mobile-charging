[Unit]
Description=Nitrobox PDF API (FastAPI/Uvicorn)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=%h/pdf-viewer-kiosk
Environment=DOWNLOAD_DIR=%h/pdf-viewer-kiosk/downloads
Environment=STATE_DIR=%h/pdf-viewer-kiosk/.state
Environment=DEFAULT_WAIT_SECONDS=120
Environment=DEFAULT_POLL_SECONDS=5
ExecStart=/usr/bin/env bash -lc 'cd %h/pdf-viewer-kiosk && . .venv/bin/activate && uvicorn app:app --host 0.0.0.0 --port 8000'
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
